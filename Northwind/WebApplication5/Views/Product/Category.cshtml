@using Northwind.Models
@model IEnumerable<Category>
<h2 class="mt-3"><i class="fas fa-list-ul"></i>Product Categories</h2>
<!--<div class="bg-primary m-1 p-1 text-white"><h4>Category Listing</h4></div>-->
@if (Model.Count() == 0)
{
    <p>There are no Categories</p>
}
<ul class="list-group">
    @foreach (Category category in Model)
    {
        <li class="list-group-item list-group-item-action">
            <a asp-controller="Product" asp-action="Index" asp-route-id="@category.CategoryId">@category.CategoryName - @category.Description</a>
        </li>
    }
</ul>
